<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.adam51.przypominacz_leki.fragment.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home" />
  <fragment
    android:id="@+id/medicineFragment"
    android:name="com.adam51.przypominacz_leki.fragment.MedicineFragment"
    android:label="Medicine"
    tools:layout="@layout/fragment_medicine">
    <action
      android:id="@+id/viewPillDetail"
      app:destination="@id/pillDetailFragment"
      app:launchSingleTop="false" />
  </fragment>
  <fragment
    android:id="@+id/otherFragment"
    android:name="com.adam51.przypominacz_leki.fragment.OtherFragment"
    android:label="Other"
    tools:layout="@layout/fragment_other" />
  <fragment
    android:id="@+id/surveyFragment"
    android:name="com.adam51.przypominacz_leki.fragment.SurveyFragment"
    android:label="Survey"
    tools:layout="@layout/fragment_survey" />
  <fragment
    android:id="@+id/pillDetailFragment"
    android:name="com.adam51.przypominacz_leki.fragment.PillDetailFragment"
    android:label="PillDetailFragment"
    tools:layout="@layout/fragment_detail_pill">
    <argument
      android:name="pill_id"
      app:argType="integer" />
  </fragment>
</navigation>