<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.adam51.przypominacz_leki.fragment.HomeFragment"
    android:label="Home"
    tools:layout="@layout/fragment_home" />
  <fragment
    android:id="@+id/medicineFragment"
    android:name="com.adam51.przypominacz_leki.fragment.MedicineFragment"
    android:label="Medicine"
    tools:layout="@layout/fragment_medicine">
    <action
      android:id="@+id/viewPillDetail"
      app:destination="@id/pillDetailFragment"
      app:launchSingleTop="false" />
    <action
      android:id="@+id/addNewPill"
      app:destination="@id/addEditPillFragment" />
    <action
      android:id="@+id/action_medicineFragment_to_addEditPillFragment"
      app:destination="@id/addEditPillFragment" />
  </fragment>
  <fragment
    android:id="@+id/surveyFragment"
    android:name="com.adam51.przypominacz_leki.fragment.SurveyFragment"
    android:label="Survey"
    tools:layout="@layout/fragment_survey">
    <action
      android:id="@+id/action_surveyFragment_to_sugarFragment"
      app:destination="@id/sugarFragment" />
  </fragment>
  <fragment
    android:id="@+id/pillDetailFragment"
    android:name="com.adam51.przypominacz_leki.fragment.PillDetailFragment"
    android:label="Pill Detail"
    tools:layout="@layout/fragment_detail_pill">
    <argument
      android:name="pill_id"
      app:argType="integer" />
    <action
      android:id="@+id/action_pillDetailFragment_to_medicineFragment"
      app:destination="@id/medicineFragment"
      app:popUpTo="@id/medicineFragment"
      app:popUpToInclusive="true" />
    <action
      android:id="@+id/action_edit_pill_from_detail"
      app:destination="@id/addEditPillFragment" />
    <argument
      android:name="pill"
      app:argType="com.adam51.przypominacz_leki.model.Pill"
      app:nullable="true" />
  </fragment>
  <fragment
    android:id="@+id/addEditPillFragment"
    android:name="com.adam51.przypominacz_leki.fragment.AddEditPillFragment"
    android:label="{toolbarName}"
    tools:layout="@layout/fragment_add_edit_pill">
    <action
      android:id="@+id/action_pill_saved_back_to_recycler"
      app:destination="@id/medicineFragment"
      app:popUpTo="@id/medicineFragment"
      app:popUpToInclusive="true" />
    <argument
      android:name="Mode"
      android:defaultValue="Add"
      app:argType="string" />
    <argument
      android:name="toolbarName"
      android:defaultValue="Add Pill"
      app:argType="string" />
    <argument
      android:name="pill_position"
      android:defaultValue="-5"
      app:argType="integer" />
    <argument
      android:name="pill"
      app:argType="com.adam51.przypominacz_leki.model.Pill"
      app:nullable="true" />
    <action
      android:id="@+id/action_addEditPillFragment_to_timePickerActivity2"
      app:destination="@id/timePickerActivity2" />
  </fragment>
  <activity
    android:id="@+id/timePickerActivity2"
    android:name="com.adam51.przypominacz_leki.activity.TimePickerActivity"
    android:label="activity_time_picker"
    tools:layout="@layout/activity_time_picker" />
  <fragment
    android:id="@+id/sugarFragment"
    android:name="com.adam51.przypominacz_leki.fragment.SugarFragment"
    android:label="Sugar Measurement"
    tools:layout="@layout/fragment_sugar">
    <action
      android:id="@+id/action_sugarFragment_to_addSugarFragment"
      app:destination="@id/addSugarFragment" />
  </fragment>
  <fragment
    android:id="@+id/addSugarFragment"
    android:name="com.adam51.przypominacz_leki.fragment.AddEditSugarFragment"
    android:label="{toolbarName}"
    tools:layout="@layout/fragment_add_edit_sugar">
    <action
      android:id="@+id/action_addSugarFragment_to_sugarFragment"
      app:destination="@id/sugarFragment"
      app:popUpTo="@id/sugarFragment"
      app:popUpToInclusive="true" />
    <argument
      android:name="sugar"
      app:argType="com.adam51.przypominacz_leki.model.Sugar"
      app:nullable="true" />
    <argument
      android:name="Mode"
      android:defaultValue="Add"
      app:argType="string" />
    <argument
      android:name="toolbarName"
      android:defaultValue="Add Measurement"
      app:argType="string" />
    <argument
      android:name="sugar_position"
      android:defaultValue="-5"
      app:argType="integer" />
  </fragment>
  <fragment
    android:id="@+id/settingsFragment"
    android:name="com.adam51.przypominacz_leki.fragment.SettingsFragment"
    android:label="Settings"
    tools:layout="@layout/fragment_settings" />
</navigation>