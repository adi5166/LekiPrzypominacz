<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp"
  android:theme="@style/Theme.MaterialComponents.Light"
  tools:context=".fragment.AddEditPressureFragment">

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/text_pressure_input_high"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:layout_constraintEnd_toStartOf="@+id/pressure_guideline1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/pressureDetailHigh"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Systolic"
      android:inputType="numberDecimal"
      android:maxLength="6" />
  </com.google.android.material.textfield.TextInputLayout>


  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/pressure_guideline1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintGuide_percent="0.4"
    app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/text_pressure_input_low"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/text_pressure_input_high"
    app:layout_constraintEnd_toStartOf="@+id/pressure_guideline2"
    app:layout_constraintStart_toStartOf="@+id/pressure_guideline1"
    app:layout_constraintTop_toTopOf="@+id/text_pressure_input_high">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/pressureDetailLow"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Diastolic"
      android:inputType="numberDecimal"
      android:maxLength="6" />
  </com.google.android.material.textfield.TextInputLayout>


  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/pressure_guideline2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintGuide_percent="0.8"
    app:layout_constraintStart_toStartOf="parent" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="mmHg"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintBottom_toBottomOf="@+id/text_pressure_input_high"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/text_pressure_input_high" />

  <TextView
    android:id="@+id/text_pressure_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:text="Date"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_pressure_input_high" />

  <TextView
    android:id="@+id/text_pressure_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="23.09,  12:25"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintBottom_toBottomOf="@+id/text_pressure_date"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/text_pressure_date" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/text_pressure_input_description"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_pressure_date">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/pressureDetailDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Measurement Description"
      android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
    android:id="@+id/pressure_input_add_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:text="Add new Measurement"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="8dp" />

  <Button
    android:id="@+id/pressure_input_edit_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:text="Update Measurement"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>