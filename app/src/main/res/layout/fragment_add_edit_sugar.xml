<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  android:theme="@style/Theme.MaterialComponents.Light">

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/text_sugar_input_number"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginRight="60dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/sugerDetailNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Measurement Number"
      android:inputType="numberDecimal" />
  </com.google.android.material.textfield.TextInputLayout>

  <TextView
    android:id="@+id/add_sugar_ml_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="mg/dl"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintBottom_toBottomOf="@+id/text_sugar_input_number"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/text_sugar_input_number" />

  <TextView
    android:id="@+id/sugar_input_time_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:text="23 sie, 11:08"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_sugar_input_number" />

  <TextView
    android:id="@+id/sugar_input_description_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="Date"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintBottom_toBottomOf="@+id/sugar_input_time_text"
    app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/sugar_DetailDescription"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sugar_input_description_text">


    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/sugerDetailDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Measurement Description"
      android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
    android:id="@+id/sugar_input_add_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add New Measurement"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <Button
    android:id="@+id/sugar_input_edit_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Edit Measurement"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>